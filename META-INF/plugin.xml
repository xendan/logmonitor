<idea-plugin version="2">
  <name>Plugin name here</name>
  <description>short description of the plugin</description>
  <version>1.0</version>
  <vendor>YourCompany</vendor>

  <!-- TODO: find proper, please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
      <applicationService serviceInterface="org.xendan.logmonitor.dao.impl.ConfigurationCallbackDao"
                          serviceImplementation="org.xendan.logmonitor.dao.impl.ConfigurationCallbackDao"/>

      <applicationService serviceInterface="org.xendan.logmonitor.dao.ConfigurationDao"
                      serviceImplementation="org.xendan.logmonitor.dao.impl.ConfigurationDaoImpl"/>
      <applicationService serviceInterface="org.xendan.logmonitor.dao.LogEntryDao"
                      serviceImplementation="org.xendan.logmonitor.dao.impl.LogEntryDaoImpl"/>

      <applicationService serviceInterface="org.xendan.logmonitor.HomeResolver"
                      serviceImplementation="org.xendan.logmonitor.HomeResolver"/>

      <applicationService serviceInterface="org.xendan.logmonitor.read.ReaderScheduler"
                      serviceImplementation="org.xendan.logmonitor.read.ReaderScheduler"/>

      <applicationService serviceInterface="org.xendan.logmonitor.read.Serializer"
                      serviceImplementation="org.xendan.logmonitor.read.Serializer"/>

      <applicationService serviceInterface="org.xendan.logmonitor.service.LogService"
                      serviceImplementation="org.xendan.logmonitor.service.impl.LogServiceImp"/>

      <applicationService serviceInterface="org.xendan.logmonitor.parser.EntryAddedListener"
                      serviceImplementation="org.xendan.logmonitor.parser.EntryAddedListener"/>

       <projectConfigurable instance="org.xendan.logmonitor.idea.LogMonitorSettingsConfigurable" id="logmonitor.settings" />

      <toolWindow id="Log Monitor" anchor="right" icon="/org/xendan/logmonitor/idea/img/icon.png"
                  factoryClass="org.xendan.logmonitor.idea.LogMonitorToolWindowFactory"/>
  </extensions>

</idea-plugin>